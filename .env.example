# Application Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://university-union.ma

# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/moroccan_university_union
DB_HOST=localhost
DB_PORT=3306
DB_NAME=moroccan_university_union
DB_USER=union_user
DB_PASSWORD=secure_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=/var/www/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@university-union.ma
SMTP_PASS=your-email-app-password
FROM_EMAIL=noreply@university-union.ma
FROM_NAME=نقابة أساتذة الجامعات المغربية

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://university-union.ma

# Redis Configuration (Optional - for sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Backup Configuration
BACKUP_PATH=/var/backups/university-union
BACKUP_RETENTION_DAYS=30

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# Social Media Integration
FACEBOOK_PAGE_URL=https://facebook.com/university-union-morocco
TWITTER_HANDLE=@UniversityUnionMA
LINKEDIN_PAGE_URL=https://linkedin.com/company/university-union-morocco

# Contact Information
CONTACT_EMAIL=contact@university-union.ma
SUPPORT_EMAIL=support@university-union.ma
EMERGENCY_PHONE=+212537XXXXXX
OFFICE_ADDRESS_AR=الرباط، المغرب
OFFICE_ADDRESS_FR=Rabat, Maroc
OFFICE_ADDRESS_EN=Rabat, Morocco